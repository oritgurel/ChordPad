
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ListView
        android:id="@id/android:list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <TextView
        android:id="@id/android:empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:paddingEnd="5dp"
        android:text="@string/sharedsheets_fragment_empty_message"/>

    <Button
        android:id="@+id/listfragment_mysheets_create_new_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/listfragment_mysheets_message_create_new_sheet"
        android:background="@android:color/transparent"
        android:textAllCaps="false"
        android:textColor="@color/colorAccent"
        android:layout_centerInParent="true"
        android:layout_below="@+id/android:empty"/>

</RelativeLayout>
<resources>

    <!-- Base application theme. -->
    <style name="AppThemeBase" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme" parent="AppThemeBase">
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="DialogButton"/>

    <style name="MyRadioButtonStyle" parent="@android:style/Widget.CompoundButton.RadioButton"/>

    <!--Create New Sheet Activity-->

    <style name="CsTextViewTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:paddingEnd">@dimen/create_sheet_activity_tv_end_margin</item>
        <item name="android:layout_marginBottom">@dimen/create_sheet_textview_margin</item>
        <item name="android:layout_marginEnd">@dimen/create_sheet_textview_margin</item>
        <item name="android:textColor">@color/preference_fallback_accent_color</item>
        <item name="android:textColorHint">@color/preference_fallback_accent_color</item>
        <item name="android:colorAccent">@color/preference_fallback_accent_color</item>
        <item name="android:colorActivatedHighlight">@color/preference_fallback_accent_color</item>

    </style>

    <style name="CsEditTextField">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:layout_width">@dimen/create_sheet_edittext_width</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/preference_fallback_accent_color</item>
        <item name="android:textColorHint">@color/preference_fallback_accent_color</item>
        <item name="android:colorAccent">@color/preference_fallback_accent_color</item>
        <item name="android:colorActivatedHighlight">@color/preference_fallback_accent_color</item>
    </style>

    <!--CordPartRadioBtn-->
    <style name="CordPartRadioBtn">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">13</item>
        <item name="android:background">@drawable/measure_background_white</item>
        <item name="android:button">@null</item>
        <item name="android:padding">0dp</item>
        <!--<item name="android:fontFamily">@font/finale_numerics</item>-->
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!--submitButton-->
    <style name="SubmitBtn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/bg_submit_btn</item>
        <item name="android:layout_marginTop">@dimen/create_sheet_activity_top_margin</item>
    </style>
</resources>
